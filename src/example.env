# ────────────────────────────────────────────────
#  Omecord Environment Configuration Example
#  Copy this file to ".env" and fill in your values
# ────────────────────────────────────────────────

# Discord Bot Token
DISCORD_TOKEN=your_bot_token_here

# Main Server (Hub) ID
MAIN_SERVER_ID=

# Support System
SUPPORT_CHANNEL_IDS=   # comma-separated list of VC IDs
SUPPORT_STAFF_ROLE_ID=

# NSFW Filter
NSFW_FILTER_ENABLED=true
NSFW_FILTER_SENSITIVITY=0.8

# Sharding (optional — leave blank for auto)
SHARD_COUNT=
SHARD_IDS=

# Logging
LOG_LEVEL=info
LOG_COLOR=true

# Database (optional for future features)
DATABASE_URL=

# Video System (future expansion)
VIDEO_ROUTER_ENDPOINT=
VIDEO_ROUTER_KEY=

# Report System
REPORT_STORAGE_PATH=./reports
REPORT_RETENTION_DAYS=30